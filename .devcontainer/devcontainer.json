{
    "name": "Python Poetry DevContainer",
    "dockerFile": "Dockerfile",
    "context": "..",
    "settings": {
      "python.pythonPath": "/workspace/.venv/bin/python"
    },
    "extensions": [
      "ms-python.python",
      "ms-python.vscode-pylance",
      "redhat.vscode-yaml"
    ],
    "postCreateCommand": "poetry install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}
